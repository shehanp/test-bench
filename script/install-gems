#!/usr/bin/env bash

set -eu

rm -rf gems

export GEM_HOME=./gems/rubygems

gem install \
  --conservative \
  --no-post-install-message \
  --norc \
  --no-document \
  --install-dir ./gems/rubygems \
  terminal_colors

mkdir -p gems/lib

for entry in gems/rubygems/gems/*/lib/*; do
  ln -sf ../../$entry gems/lib
done
